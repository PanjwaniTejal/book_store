<table>
  <tr>
    <th>Title</th>
    <th>Price</th>
    <th>Level</th>
    <th>Author Name</th>
    <th>Actions</th>
  </tr>
  <% if books.any? %>
    <% books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
        <td><%= book.level %></td>
        <td><%= book.authors.pluck(:first_name).join(', ') %></td>
        <td>
          <%= link_to 'Show'  , book_path(book) %>
          <%= link_to 'Edit'  , edit_book_path(book) %>
          <%= link_to 'Delete', book_path(book), method: :delete %>
        </td>
      </tr>
     <% end %>
  <% else %>
    <tr>
      <td colspan='4'>No data</td>
    </tr>
  <% end %>
</table>