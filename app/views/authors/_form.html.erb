<div class='row'>
  <div class='col-md-1'>
    <%= form.label :first_name %>
  </div>
  <div class='col-md-11'>
    <%= form.text_field :first_name %>
  </div>
</div>
<div class='row mt-2'>
  <div class='col-md-1'>
    <%= form.label :last_name %>
  </div>
  <div class='col-md-11'>
    <%= form.text_field :last_name %>
  </div>
</div>
<div class='row mt-2'>
  <div class='col-md-1'>
    <%= form.label :date_of_birth %>
  </div>
  <div class='col-md-11'>
    <%= form.date_field :date_of_birth %>
  </div>
</div>

<div class='row mt-2'>
  <div class='col-md-12'>
    <%= form.submit %>
  </div>
</div>
